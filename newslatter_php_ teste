//Comunicados Internos
$recordset = $mysqli->query("SELECT trim(concat('https://www.poli.usp.br/noticias/comunicados-internos/', P.id, '-', P.post_name, '.html')) as link,
(SELECT trim(replace(X.guid, 'http:', 'https:')) FROM wp_postmeta M, wp_posts X WHERE X.id = M.meta_value AND M.meta_key = '_thumbnail_id' AND M.post_id = P.id LIMIT 1) as thumbnail,
trim(P.post_title) as post_title, trim(P.post_content) as post_content
FROM wp_posts P
LEFT JOIN wp_term_relationships R ON (P.ID = R.object_id)
LEFT JOIN wp_term_taxonomy T ON (R.term_taxonomy_id = T.term_taxonomy_id)
WHERE P.post_type = 'post'
AND P.post_status = 'publish'
AND P.post_date between date_format(DATE_SUB(NOW(), INTERVAL 7 DAY), '%Y-%m-%d 00:00:00') AND date_format(now(), '%Y-%m-%d 00:00:00')
AND T.taxonomy = 'category'
AND T.term_id = 245
ORDER BY P.post_date DESC");
$comunicados = $recordset->fetch_all(MYSQLI_ASSOC);

